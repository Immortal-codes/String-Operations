#include <bits/stdc++.h>
using namespace std;

int main() {
    // String initialization
    string s = "hello";

    // 1. Length (manual)
    int len = 0;
    for(int i=0; s[i] != '\0'; i++) len++;
    cout << "Length: " << len << endl;

    // 2. Access
    cout << "First char: " << s[0] << endl;
    cout << "Last char: " << s[len-1] << endl;

    // 3. Traversal
    cout << "Traversal: ";
    for(int i=0; i<len; i++) cout << s[i] << " ";
    cout << endl;

    // 4. Update (replace char at index)
    s[0] = 'Y';
    cout << "Updated: " << s << endl;

    // 5. Concatenation (manual)
    string s2 = "world";
    string concat = s;
    for(int i=0; s2[i] != '\0'; i++) {
        concat += s2[i];
    }
    cout << "Concatenated: " << concat << endl;

    // 6. Substring (manual: from index l to r)
    int l = 1, r = 3;
    string sub = "";
    for(int i=l; i<=r && i<len; i++) {
        sub += s[i];
    }
    cout << "Substring (1-3): " << sub << endl;

    // 7. Compare two strings (manual)
    string a = "abc", b = "abc";
    bool equal = true;
    if(a.size() != b.size()) equal = false;
    else {
        for(int i=0; i<a.size(); i++) {
            if(a[i] != b[i]) { equal = false; break; }
        }
    }
    cout << "Compare: " << (equal ? "Equal" : "Not Equal") << endl;

    // 8. Insert (manual at index pos)
    string ins = s;
    string word = "XX";
    int pos = 2;
    string temp = "";
    for(int i=0; i<pos; i++) temp += ins[i];
    for(int i=0; word[i] != '\0'; i++) temp += word[i];
    for(int i=pos; i<ins.size(); i++) temp += ins[i];
    ins = temp;
    cout << "Insert at 2: " << ins << endl;

    // 9. Delete (manual erase from pos, count k)
    string del = s;
    int start = 1, k = 2; // delete 2 chars from index 1
    string temp2 = "";
    for(int i=0; i<del.size(); i++) {
        if(i>=start && i<start+k) continue;
        temp2 += del[i];
    }
    del = temp2;
    cout << "Delete 2 chars from index 1: " << del << endl;

    // 10. Find substring (manual)
    string target = "lo";
    int idx = -1;
    for(int i=0; i<=len - (int)target.size(); i++) {
        bool match = true;
        for(int j=0; j<target.size(); j++) {
            if(s[i+j] != target[j]) { match = false; break; }
        }
        if(match) { idx = i; break; }
    }
    cout << "Index of 'lo': " << idx << endl;

    // 11. Reverse (manual)
    string rev = s;
    for(int i=0, j=len-1; i<j; i++, j--) {
        char temp = rev[i];
        rev[i] = rev[j];
        rev[j] = temp;
    }
    cout << "Reversed: " << rev << endl;

    return 0;
}
