#include <bits/stdc++.h>
using namespace std;

int main() {
    // 1. Creation
    string s = "Hello";

    // 2. Input
    string name;
    cout << "Enter your name: ";
    cin >> name; // space tak input lega

    // 3. Access
    cout << "First character: " << s[0] << endl;

    // 4. Traversal
    cout << "Characters: ";
    for(char c : s) cout << c << " ";
    cout << endl;

    // 5. Update
    s[0] = 'Y'; // Hello -> Yello
    cout << "Updated string: " << s << endl;

    // 6. Concatenation
    string full = s + " " + name;
    cout << "Concatenated: " << full << endl;

    // 7. Substring
    cout << "Substring(1,3): " << s.substr(1,3) << endl; // ell

    // 8. Length
    cout << "Length of string: " << s.size() << endl;

    // 9. Comparison
    if(s == "Yello") cout << "Equal" << endl;

    // 10. Insert
    s.insert(2, "XX");
    cout << "After insert: " << s << endl;

    // 11. Erase/Delete
    s.erase(2,2);
    cout << "After erase: " << s << endl;

    // 12. Find
    cout << "Index of 'lo': " << s.find("lo") << endl;

    // 13. Reverse
    reverse(s.begin(), s.end());
    cout << "Reversed: " << s << endl;

    return 0;
}
